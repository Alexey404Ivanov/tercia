            <Button Text="2/4"
                    FontFamily="NunitoBold" 
                    FontSize="30"
                    BackgroundColor="#00C2FF"
                    WidthRequest="100"
                    HeightRequest="70"
                    Margin="0,0,20,0"
                    Clicked="OnValueSelected" />
            
            <Button Text="3/4"
