<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tercia.MainPage">

    <StackLayout>
        <Label Text="Теория"
               FontFamily="NunitoBold" 
               TextColor="#00C2FF" 
               FontSize="30" 
               Margin="0,0,0,40" />

        <Label Text="Аккорды" 
               FontFamily="NunitoSemiBold"
               FontSize="14" 
               Margin="0,0,0,5" />
        
        <Label Text="Знаки в тональностях" 
               FontFamily="NunitoSemiBold" 
               FontSize="14"
               Margin="0,0,0,5" />

        <Label Text="Интервалы"
               FontFamily="NunitoSemiBold"
               FontSize="14"
               Margin="0,0,0,5" />

        <Button Text="Спросить AI"
                FontFamily="NunitoSemiBold"
                BackgroundColor="#00C2FF"
                FontSize="15"
                WidthRequest="150" 
                HeightRequest="50" 
                HorizontalOptions="Center" 
                VerticalOptions="End"
                Clicked="OnAskAiButtonClicked" 
                Margin="0,100,0,0" />
    </StackLayout>
</ContentPage>
