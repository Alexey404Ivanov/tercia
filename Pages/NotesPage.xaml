<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tercia.NotesPage">
    <Grid>
        <StackLayout>
            <Label Text="Ноты"
                   FontFamily="NunitoBold" 
                   TextColor="#00C2FF" 
                   Margin="20,30,0,40"
                   FontSize="30" />
            
            <Button Text="Never Gonna Give You Up"
                    TextColor="Black"
                    FontFamily="NunitoSemiBold"
                    BackgroundColor="White"
                    FontSize="14"
                    Margin="11,0,0,0"
                    HorizontalOptions="Start"
                    Clicked="OnNote1Clicked" />
            
            <BoxView HeightRequest="1"
                     Color="Gainsboro"
                     Margin="20,0,20,0"/>
            
            <Button Text="Moonlight sonata"
                    TextColor="Black"
                    FontFamily="NunitoSemiBold"
                    BackgroundColor="White"
                    FontSize="14"
                    Margin="11,0,0,0"
                    HorizontalOptions="Start"
                    Clicked="OnNote2Clicked"/>
            
            <BoxView HeightRequest="1"
                     Color="Gainsboro"
                     Margin="20,0,20,0"/>
            
            <Button Text="Prelude in C# Minor"
                    TextColor="Black"
                    FontFamily="NunitoSemiBold"
                    BackgroundColor="White"
                    FontSize="14"
                    Margin="11,0,0,0"
                    HorizontalOptions="Start"
                    Clicked="OnNote3Clicked"/>
            
            <BoxView HeightRequest="1"
                     Color="Gainsboro"
                     Margin="20,0,20,0"/>
            
            <Button Text="Nocturne in C# Minor"
                    TextColor="Black"
                    FontFamily="NunitoSemiBold"
                    BackgroundColor="White"
                    FontSize="14"
                    Margin="11,0,0,0"
                    HorizontalOptions="Start"
                    Clicked="OnNote4Clicked"/>
            
            <BoxView HeightRequest="1"
                     Color="Gainsboro"
                     Margin="20,0,20,0"/>
            
            <Button Text="The Great Gid In The Sky"
                    TextColor="Black"
                    FontFamily="NunitoSemiBold"
                    BackgroundColor="White"
                    FontSize="14"
                    Margin="11,0,0,0"
                    HorizontalOptions="Start"
                    Clicked="OnNote5Clicked"/>
        </StackLayout>   
        
        <Grid VerticalOptions="End" Padding="0" Margin="0,70,0,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</ContentPage>