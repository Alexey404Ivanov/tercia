<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tercia.TheoryPage">
    <Grid>
        <StackLayout>
            <Label Text="Теория"
                   FontFamily="NunitoBold" 
                   TextColor="#00C2FF" 
                   Margin="20,30,0,40"
                   FontSize="30" />
            
            <Button Text="Аккорды"
                    TextColor="Black"
                    FontFamily="NunitoSemiBold"
                    BackgroundColor="White"
                    FontSize="14"
                    Margin="11,0,0,0"
                    HorizontalOptions="Start"
                    Clicked="OnAccordsSectionClicked" />
            
            <BoxView HeightRequest="1"
                     Color="Gainsboro"
                     Margin="20,0,20,0"/>
            
            <Button Text="Знаки в тональности"
                    TextColor="Black"
                    FontFamily="NunitoSemiBold"
                    BackgroundColor="White"
                    FontSize="14"
                    Margin="11,0,0,0"
                    HorizontalOptions="Start"
                    Clicked="OnTonalitySectionClicked"/>
            
            <BoxView HeightRequest="1"
                     Color="Gainsboro"
                     Margin="20,0,20,0"/>
            
            <Button Text="Ритм и темп"
                    TextColor="Black"
                    FontFamily="NunitoSemiBold"
                    BackgroundColor="White"
                    FontSize="14"
                    Margin="11,0,0,325"
                    HorizontalOptions="Start"
                    Clicked="OnTempSectionClicked"/>
        </StackLayout>   
        
        <Grid VerticalOptions="End" Padding="0" Margin="0,70,0,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</ContentPage>